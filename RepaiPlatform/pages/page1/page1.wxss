.pbody1{
  height: 1000rpx;
  padding-top: 15%;
}
.picker{
  display: flex;
  height: 40rpx;
  border-bottom: solid 1px rgb(199, 197, 197);
  /*background-color: rgb(230, 222, 222);*/
  padding: 20rpx;
  margin: 40rpx;
}

.pickerContent{
  overflow: hidden;
  white-space: nowrap;
  margin: auto 5rpx auto auto;
}

.picker image{
  height: 40rpx;
  width: 40rpx;

}

.view-contain-ti {
  display: flex;
  height: 260rpx;
  margin: 20px;
  border: 3rpx solid #969593;
  border-radius: 10rpx;
}

