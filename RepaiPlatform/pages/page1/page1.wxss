.but1{
  width: 100%;
  height: 10%;
  margin-top: 20rpx;
  background-color: rgb(96, 138, 30);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.photochoice{
  position: relative;
  width: 100%;
  height: 250rpx;
}

.chooseImage{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx;
  margin-top: -20rpx;
  height: 200rpx;
  width: 200rpx;
  background-color: rgb(233, 230, 230);
  border-radius: 5%;
}
.chooseImage image{
  margin: auto 5px;
  height: 100rpx;
  width: 100rpx;
}

.questImage{
  display: flex;
  position: absolute;
  top: 20rpx;
  display: flex;
  margin: 30rpx;
  margin-top: -20rpx;
  height: 200rpx;
  width: 200rpx;
  border-radius: 5%;
}

.questImage image:nth-child(1){
  height: 200rpx;
  box-shadow: 0 0 5px rgb(74, 77, 74);
}

.questImage image:nth-child(2){
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  height: 40rpx;
  width: 40rpx;
}