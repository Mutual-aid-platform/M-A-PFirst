/* 选择板块 */

.pbody1{
  height: 1000rpx;
  padding-top: 15%;
}
.picker{
  height: 40rpx;
  border: solid 1px rgb(226, 220, 220);
  background-color: rgb(230, 222, 222);
  padding: 20rpx;
  margin: 40rpx;
}

.view-contain-ti {
  display: flex;
  height: 100px;
  margin: 20px;
  border: 3rpx solid #969593;
  border-radius: 10rpx;
}

.text-ti {
  position: absolute;
  font-size: 12px;
  background: white;
  margin: -10px 0 0 10px;
  padding: 0 5px;
  color: rgb(144, 147, 167);
}

.input1 {
  height: 100px;
  width: 400px;
  margin:  auto 10px;
}

.but1{
  width: 100%;
  height: 10%;
  margin-top: 20rpx;
  background-color: rgb(96, 138, 30);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}