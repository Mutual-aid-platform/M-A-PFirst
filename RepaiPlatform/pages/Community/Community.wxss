/* pages/Community/Community.wxss */
page {
    background-color: #F6F6F6;
    padding-bottom: 10rpx;
}

.txt-list {
    width: 92%;
    margin: 30rpx 4%;
    padding: 50rpx 0;
    background-color:yellowgreen;
    border-radius: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.txt-item {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.txt-item text {
    margin: 50rpx;
    font-size: 36rpx;
    /*font-weight: bold;*/
    text-align: justify;
}

.btns {
    margin-top: 38rpx;
    margin-bottom: 38rpx;
    text-align: center;
}

.btns button {
    margin-bottom: 15rpx;
}

.change {
    background-color: #ffffff;
}
